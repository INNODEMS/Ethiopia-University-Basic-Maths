    <questionvariables>
      <text><![CDATA[/*coefficients of function*/
sig:rand([-1,1]);
aa:sig*(rand(4)+1);
bb:rand_with_prohib(-4,4,[aa,0]);
cc:rand_with_prohib(-4,5,[bb,0,bb*aa]);
num:x-aa;
denome:(bb*x)-cc;
quest:g(x)=num/denome;

/*Stick a "y" in for the "g(x)"*/
quest_1:y=num/denome;

/*Switch the x and y*/
num_1:y-aa;
denome_1:(bb*y)-cc;
quest_2:x=num_1/denome_1;

/*make 'y' subject of the formulae*/
y1:x*denome_1 = num_1;
y2:expand(x*denome_1) = num_1;
y3:(bb*y*x)-(cc*x)=y-aa;
y4:(bb*y*x)-y=(cc*x)-aa;
y5:y*((bb*x)-1)=(cc*x)-aa;
y6:y=((cc*x)-aa)/((bb*x)-1);

ta:rhs(y6);]]></text>
    </questionvariables>
