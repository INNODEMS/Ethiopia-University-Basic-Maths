ta_1:matrix([matrix_A[2,2],matrix_A[2,3]],[matrix_A[3,2],matrix_A[3,3]]);
ta_2:adjoint(matrix_A);
ta_3:determinant(matrix_A);
ta_4:invert(matrix_A);

simp:true;
ta_5:ratsimp((-1)^(1+1)*((matrix_A[2,2]*matrix_A[3,3])-(matrix_A[3,2]*matrix_A[2,3])));
ta_6: ratsimp((-1)^(1+2) *((matrix_A[2,1]*matrix_A[3,3])-(matrix_A[3,1]*matrix_A[2,3])));

/*Possible mistakes*/
mistake_ta2:transpose(ta_2);
mistake_ta4:transpose(matrix_A);</text>
