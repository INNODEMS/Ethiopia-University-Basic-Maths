c2: rand_with_prohib(-5,5,[0]);
d1: a1*tax1+b1*tax2;
d2: b2*tax2+c2*tax1;
eqn_1:ratsimp(a1*((d2-b2*x_2)/c2)+b1*x_2= d1);
eq1: a1*x_1+b1*x_2 = d1;
eq2: b2*x_2+c2*x_1 = d2;
matrix_A:matrix([a1,b1],[c2,b2]);
while determinant(matrix_A) = 0 do matrix_A: matrix([a1,b1],[c2,b2]);
matrix_A;

matrix_inverse:invert(matrix_A);
column_vector:matrix([d1],[d2]);
matrix_variable:matrix([x_1],[x_2]);
ta:matrix_inverse.column_vector;</text>
