    <questionvariables>
      <text>/*Defining question variables*/
A: rand(matrix([2,3,5],[3,6,4],[4,6,3]));
while determinant(A) = 0 do A: rand(matrix([2,3,5],[3,6,4],[4,6,3]));
A;
determinant(A);

/*Worked solution*/
a:A[1,1]; /*first entry in the first row*/
b:A[1,2]; /*second  entry in  first row*/ 
c:A[1,3]; /*third entry in the first row*//*u1*/

d:A[2,1]; /*first entry in second row*/
e:A[2,2]; /*second  entry in second row*/ 
f:A[2,3]; /*third entry in second row*/   /*u2*/
 
g:A[3,1]; /*first entry in third row*/
h:A[3,2]; /*second  entry in third row*/ 
i:A[3,3]; /*third entry in third row*/   /*u3*/

submatrix1:matrix([e,f],[h,i]); /*extracting submatrices*/
submatrix2:matrix([d,f],[g,i]);
submatrix3:matrix([d,e],[g,h]);
a*determinant(submatrix1);
-b*determinant(submatrix2);
c*determinant(submatrix3); 

/*Model answers*/
ta1:A;
ta2:abs(determinant(A));</text>
    </questionvariables>
