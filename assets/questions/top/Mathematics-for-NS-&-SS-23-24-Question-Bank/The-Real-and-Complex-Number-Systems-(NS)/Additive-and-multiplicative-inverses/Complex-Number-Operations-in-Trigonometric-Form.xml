      <text>/*complex number 1*/
aa:3+rand(4);
angle: rand([%pi,%pi/3, %pi/4, %pi/6]);
zz: aa*(cos(angle)+%i*sin(angle));
z_real:realpart(zz);
z_imag:imagpart(zz);

/*complex number 2*/
bb:3+rand(3);
angle2: rand([%pi, %pi/2, %pi/3, %pi/4, %pi/6,%pi*5]);
z2: bb*(cos(angle2)+%i*sin(angle2));
z_real2:realpart(z2);
z_imag2:imagpart(z2);

/*Worked out solution 1*/
ss:aa*bb;
angle_sum:angle+angle2;
ta:ratsimp(ss*(cos(angle_sum)+%i*sin(angle_sum)));

/*Worked out solution 2*/
AB:aa/bb;
angle_diff:angle-angle2;
ta2:ratsimp(AB*(cos(angle_diff)+%i*sin(angle_diff)));</text>
