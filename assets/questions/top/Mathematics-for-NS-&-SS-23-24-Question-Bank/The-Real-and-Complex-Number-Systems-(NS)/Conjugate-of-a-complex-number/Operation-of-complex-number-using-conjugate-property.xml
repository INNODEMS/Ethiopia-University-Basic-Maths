    <questionvariables>
      <text>x:rand(10)+5;
y:rand_with_prohib(1,10,[x,0]);

x1:rand_with_prohib(1,10,[x,0,y]);
y1:rand_with_prohib(1,10,[x,0,y,x1]);

a1: x-y*%i;
a2: x1+y1*%i;
aa: a1+a2;

x2:rand_with_prohib(1,10,[x,0,y,x1,y1]);
y2: rand_with_prohib(1,10,[x,0,y,x1,y1,x2]);

x3:  rand_with_prohib(1,10,[x,0,y,x1,y1,x2,y2]);
y3:  rand_with_prohib(1,10,[x,0,y,x1,y1,x2,y2,x3]);

b1: x2+y2*%i;
b2: x3-y3*%i;
bb: b1-b2;

conj: conjugate(bb);
ta1: expand(aa*conj);
ta2: expand(bb*conj);

tt:ta1/ta2;
rez: realpart(tt);
imz: (imagpart(tt))*%i;

ta:rez+imz;</text>
