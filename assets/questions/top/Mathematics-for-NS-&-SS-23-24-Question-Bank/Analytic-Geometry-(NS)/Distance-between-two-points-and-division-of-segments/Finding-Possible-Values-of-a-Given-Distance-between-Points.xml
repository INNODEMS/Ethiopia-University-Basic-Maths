      <text><![CDATA[/*Question Variables*/
x_cord_1:rand(3)+1;
x_cord_2:-x_cord_1;
y_cord_1:a;
y_cord_2:rand(5)+5;
dist:rand(6)+6;
a1:sqrt((x_cord_2-x_cord_1)^2+(y_cord_2-y_cord_1)^2)=dist;
a1_sq:a1^2;
a1_exp:expand(a1_sq);
a1_expr:a1_exp-dist^2;
pol:y_cord_1^2-2*y_cord_2*y_cord_1+(x_cord_2-x_cord_1)^2+y_cord_2^2-dist^2=0;
discr_a1:(2*y_cord_2)^2-4*((x_cord_2-x_cord_1)^2+y_cord_2^2-dist^2);
bb1:-2*y_cord_2;
aa1:1;
cc1:(x_cord_2-x_cord_1)^2+y_cord_2^2-dist^2;

/*Model Answers*/
ta1:ratsimp(-bb1/2);
ta2:ratsimp((-bb1-sqrt(discr_a1))/2);
ta3:ratsimp((-bb1+sqrt(discr_a1))/2);
ta4:none;
ta_1:if discr_a1=0 then ta1 else (if discr_a1>0 then ta2 else none);
ta_2:if discr_a1=0 then ta1 else (if discr_a1>0 then ta3 else none);
ta:if discr_a1=0 then ta1 else (if discr_a1>0 then ta2 nounor ta3 else none);]]></text>
