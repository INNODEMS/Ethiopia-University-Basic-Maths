    <questionvariables>
      <text>/* Generate random coordinates*/
x_1: rand(5) + 5;  /* x-coordinate of point A (range: 5-9)*/
x_2: rand_with_step(-5, 5, 1);  /* x-coordinate of point B (range: -5 to 5 in steps of 1)*/
y_1: rand(3) + 4;  /* y-coordinate of point A (range: 4-6)*/
y_2: rand(4) + 4;  /* y-coordinate of point B (range: 4-7)*/

/* Calculate distance between points AB*/
ta1: sqrt((x_2 - x_1)^2 + (y_2 - y_1)^2);  /* distance formula*/
/*worked solution variables*/
x_points:(x_2 - x_1)^2;
y_points: (y_2 - y_1)^2;

/* Worked solution */
simp:false;
line1: sqrt((x_1 - x_2)^2 + (y_1 - y_2)^2);
line2: sqrt(ev(x_1 - x_2,simp)^2 + ev(y_1 - y_2,simp)^2);
line3: sqrt(ev((x_1 - x_2)^2,simp) + ev((y_1 - y_2)^2,simp));
simp:true;</text>
