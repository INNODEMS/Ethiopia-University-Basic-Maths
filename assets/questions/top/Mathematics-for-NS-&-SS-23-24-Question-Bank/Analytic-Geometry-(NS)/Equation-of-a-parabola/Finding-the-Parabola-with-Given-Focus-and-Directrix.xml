    <questionvariables>
      <text>/*Defining randomizing focus F*/
Focus_x: rand_with_step(-5,5,1);
Focus_y: rand_with_step(-5,5,1);
/*Defining randomizing directrix l*/
directrix: 2*(rand(5)+1)-Focus_y;

/*Solve the system*/
expr1: y0+p=Focus_y;
expr2: y0-p=directrix;
expr3: solve([expr1,expr2],[y0,p]); /*solve expression 1 and 2 simultaneously*/
expr4: expr3[1]; 
expr5: expr4[1] /*to obtain y=b*/
expr6: rhs(expr5); /*to obtain value b*/
expr7: expr4[2]; /*to obtained p=a*/
expr8: rhs(expr7); /*to obtained a*/
expr_c: (x-Focus_x)^2=4*expr8*(y-expr6); /*parabola equation*/
expr_c1: expand((x-Focus_x)^2-4*expr8*(y-expr6))=0; /*parabola equation expanded*/

/*Model answers*/
ta1: (x-x0)^2=4*p*(y-y0); /*Formula of the parabola (c) */
ta2: Focus_x;
ta3: expr6;
ta4: expr8;
ta5: expr_c1;</text>
