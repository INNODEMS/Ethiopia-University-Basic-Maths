      <text>x_cord:rand(5)+1;
y_cord:rand(7)+3;
minor_axis_endpoints: [[x_cord, y_cord], [x_cord, -y_cord]];
nn:8;
eccentricity:nn/10;
/* Calculate b from the endpoints of the minor axis */
b: (minor_axis_endpoints[1][2] - minor_axis_endpoints[2][2]) / 2;  

/* Calculate a using the eccentricity */
a: b / sqrt(1 - eccentricity^2);  

/* Calculate the distance from the center to the foci (c) */
c: a * eccentricity;

/* Calculate the center of the ellipse */
center: [(minor_axis_endpoints[1][1] + minor_axis_endpoints[2][1]) / 2, (minor_axis_endpoints[1][2]+minor_axis_endpoints[2][2])/2];

/* Calculate the coordinates of the foci */
focus1: [center[1] + c, 0];
focus2: [center[1] - c, 0];  

/* Calculate the coordinates of the vertices */
vertex1: [center[1] + a, 0];
vertex2: [center[1] - a, 0];</text>
