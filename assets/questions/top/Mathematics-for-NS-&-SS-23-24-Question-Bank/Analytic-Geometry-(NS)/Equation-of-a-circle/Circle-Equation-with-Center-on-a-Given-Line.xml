h_val:rhs(solve_eq);
rad_sq:(h_fval-x_1)^2+(k_fval-y_1)^2;
ta1:[h_fval,k_fval];
ta2:sqrt(rad_sq);
ta3:(x-h_fval)^2+(y-k_fval)^2=rad_sq;</text>
