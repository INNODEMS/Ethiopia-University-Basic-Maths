      <text>/* Define the coordinates of the center and the point on the circle */
center: [rand_with_step(-5,5,1), rand_with_step(-5,5,1)];
point: [rand_with_prohib(-5,5,[centre[1],0,centre[2]]), rand_with_step(-5,5,1)];  
/* Calculate the radius using the distance formula */
radius: sqrt((point[1] - center[1])^2 + (point[2] - center[2])^2);

/*Worked Solution*/
expr1:point[1] - center[1];
expr2:point[2] - center[2];
expr3:expr1^2;
expr4:expr2^2;
expr5:expr3+expr4;
expr6:decimalplaces(radius,2);
/*possible mistakes*/
incorrect_distance:sqrt((point[1] - center[1]) + (point[2] - center[2]));</text>
