    <questionvariables>
      <text>/*Randomising coordinates of focus*/
coef: rand_with_step(1,5,1);
focus2_x: rand_with_prohib(-7,7,[0]);
focus1_x: focus2_x+2*(coef+1);
focus1_y: rand_with_step(-5,5,1);
focus2_y:  rand_with_prohib(-7,7,[0,focus1_y]);

/*Defining vertices*/
ver1_x: rand_with_prohib(-5,5,[0]);
ver1_y: (focus1_y+focus2_y)/2;

ver2_x:  2*coef+ver1_x;

ver2_y: (focus1_y+focus2_y)/2;

/*compute F1F2*/
cc: abs(focus1_x-focus2_x);
c: cc/2;
/*Solve system 1 to get values of a and b*/
aa: abs(ver1_x-ver2_x);
val_a: abs(ver1_x-ver2_x)/2; /*value of a*/

expr1: solve(val_a^2+b^2=c^2,b);
expr2: expr1[1];
val_b: abs(rhs(expr2)); /*value of b*/
/*Value on center h, k */
h:  (focus1_x+focus2_x)/2;
k: (focus1_y+focus2_y)/2;
/*Equation of hyperbola*/
hyper1: ((x-(h))^2/(val_a^2))-((y-(k))^2/(val_b^2))=1;
hyper2: val_b^2*(x-h)^2-val_a^2*(y-k)^2=val_a^2*val_b^2;
hyper3: val_b^2*(x-h)^2-val_a^2*(y-k)^2-val_a^2*val_b^2=0
den_ab: denom(val_a^2*val_b^2);
ta1: expand(den_ab*hyper3);</text>
    </questionvariables>
