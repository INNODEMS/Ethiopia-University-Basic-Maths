    <questionvariables>
      <text>/*Value on center h, k */
h:  rand_with_prohib(-5,5,[0]);
k: rand_with_prohib(-5,5,[0]);
/*values of a and b*/
aa: rand_with_step(2,8,2);
val_a: sqrt(aa); /*value of a*/
bb: rand_with_step(1,8,2); /*value of b^2*/
val_b: sqrt(bb); /*value of b*/
/*Equation of hyperbola*/
hyper1: ((x-h)^2/(val_a^2))-((y-k)^2/(val_b^2))=1;
hyper2_1:val_b^2*(x^2-2*x*h+h^2)-val_a^2*(y^2-2*y*k+k^2)=val_a^2*val_b^2;
hyper2_2:val_b^2*x^2-val_b^2*2*x*h -val_a^2*y^2+val_a^2*2*y*k =val_a^2*val_b^2- val_b^2*h^2+val_a^2*k^2;
hyper2: val_b^2*(x-h)^2-val_a^2*(y-k)^2=val_a^2*val_b^2;

hyper3: val_b^2*(x-h)^2-val_a^2*(y-k)^2-val_a^2*val_b^2=0
den_ab: denom(val_a^2*val_b^2);
expr: expand(den_ab*hyper3); /*Expression of the equation*/

/*Value of c*/
cc: val_a^2+val_b^2; /*value of c^2*/
c: sqrt(cc);

/*Randomising coordinates of focus*/
focus1_x: h-c;
focus1_y: k;
focus2_x: h+c;
focus2_y: k;


/*Defining vertices*/
ver1_x: h+val_a;
ver1_y: k;

ver2_x: h-val_a;
ver2_y: k;
/*asymptotes*/
l1: y-k=(val_b/val_a)*(x-h);
l1_expd: expand((y-k)-(val_b/val_a)*(x-h)=0); /*First asymptote*/
l2: y-k=-(val_b/val_a)*(x-h);
l2_expd: expand((y-k)+(val_b/val_a)*(x-h)=0);  /*Second asymptote*/

/*Model answer*/
ta1: matrix([focus1_x],[focus1_y]); /*foci F1*/
ta2: matrix([focus2_x],[focus2_y]); /*foci F2*/
ta3: matrix([ver1_x],[ver1_y]);
ta4: matrix([ver2_x],[ver2_y]);
ta5: l1_expd;
ta6: l2_expd;</text>
    </questionvariables>
