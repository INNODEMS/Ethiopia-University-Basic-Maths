    <questionvariables>
      <text>/*Randomising coordinates of focus*/
aa: rand_with_step(2,5,1);
bb: rand_with_prohib(-5,5,[0,aa^2]);
focus1_x: bb-sqrt(aa);
focus1_y: rand_with_prohib(-5,5,[0]);
focus2_x: bb+sqrt(aa);
focus2_y:  rand_with_prohib(-5,5,[0]);

/*Defining asymptotes*/
asym_y: (focus1_x+focus2_x)/2;
asym_x: (focus1_y+focus2_y)/2;
coef: 2;
asym: y-asym_y=+-coef*(x-asym_x);

/*compute F1F2*/
cc: abs(focus1_x-focus2_x);
c: cc/2;
/*Solve system 1 to get values of a and b*/
expr1: solve([a^2+b^2=c^2,b=coef*a],[a,b]);
expr2: expr1[1];
expr3: expr2[1];
val_a: abs(rhs(expr3)); /*value of a*/
expr5: expr2[2];
val_b: abs(rhs(expr5)); /*value of b*/
/*Value on center h, k */
h:  (focus1_x+focus2_x)/2;
k:  (focus1_y+focus2_y)/2;
/*Equation of hyperbola*/
hyper1: ((x-h)^2/val_a^2)-((y-k)^2/val_b^2)=1;
hyper2: val_b^2*(x-h)^2-val_a^2*(y-k)^2=val_a^2*val_b^2;
hyper3: val_b^2*(x-h)^2-val_a^2*(y-k)^2-val_a^2*val_b^2=0
den_ab: denom(val_a^2*val_b^2);
ta1: expand(den_ab*hyper3);</text>
    </questionvariables>
