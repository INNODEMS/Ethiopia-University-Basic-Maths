    <questionvariables>
      <text>/*Randomising coordinates of focus*/
focus1_x: rand_with_prohib(-5,5,[0]);
focus1_y: rand_with_prohib(-5,5,[0]);
focus2_x: focus1_x;
focus2_y: 2*(rand(5)+1)+focus1_y;

/*Defining axis and find value of a*/
AA: rand_with_step(2,20,2);
val_a: AA/2; /*value of a*/

/*compute F1F2*/
cc: abs(focus1_y-focus2_y);
c: cc/2;

val_b: sqrt(val_a^2+c^2); /*value of b*/
/*Value on center h, k */
h:  (focus1_x+focus2_x)/2;
k: (focus1_y+focus2_y)/2;

/*Equation of ellipse*/
simp:false;
ta1: (ev((x-h)^2/val_a^2,simp))+(ev((y-k)^2/val_b^2,simp))=1;</text>
    </questionvariables>
