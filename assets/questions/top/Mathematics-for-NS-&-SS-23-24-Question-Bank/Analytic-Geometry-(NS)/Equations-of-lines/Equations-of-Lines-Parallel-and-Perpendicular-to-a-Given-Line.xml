    <questionvariables>
      <text>/*Question variables*/
x_cor: rand_with_step(-5,5,1);
y_cor: rand_with_step(-5,5,1);
coef1: rand_with_prohib(-5,5,[0]);
coef2:rand_with_prohib(-5,5,[0]);
soln1: rand_with_step(-5,5,1);
soln2: rand_with_step(-6,8,1);
par_line:coef1*y+coef2*x=soln1;
perp_line:coef1*x+coef2*y=soln2;

/*Worked solution*/
eqn1a: y=(-coef2*x/coef1)+(soln1/coef1);
slope1_par:-coef2/coef1;
eqn2a:y-y_cor=slope1_par*(x-x_cor); 
ta1:y=expand(slope1_par*(x-x_cor))+y_cor;

eqn1b:y=(-coef1*x/coef2)+(soln2/coef2);
slope2_perp:-coef1/coef2;
m_2:-1/slope2_perp;
ta2:y=expand(m_2*(x-x_cor))+y_cor;</text>
    </questionvariables>
