dd:rand_with_prohib(1,12,[aa,bb,cc]);
ee:rand_with_prohib(1,12,[aa,bb,cc,dd]);
ff:rand_with_prohib(1,12,[aa,bb,cc,dd,ee]);
gg:rand_with_prohib(1,12,[aa,bb]);
hh:rand_with_prohib(1,12,[aa,bb,gg]);
ii:rand_with_prohib(1,12,[aa,bb,gg,hh]);
jj:rand_with_prohib(1,12,[aa,bb,gg,hh,ii]);
setA:set(aa,cc,dd,ee,ff);
setB:set(bb,gg,hh,ii,jj);
intAB:intersect(setA,setB);
ta1:cardinality(intAB);
list1:["apple","banana","coconut","grape","lemon","lime","mango","melon","orange","pear"];
univ2:setify(list1);
/*Worked solution*/
numList1: [rand(2)+1,rand(4)+1,rand(3)+4,3+rand(2)+5,rand(5)+5,rand(8)+3,rand(6)+4,rand(6)+2,rand(7)+1,rand(9)+2,rand(10)+1];
evens: [];
odds:[];
for i in numList1 do (
    if evenp(i) then
        evens:append(evens,[i])
    else
        odds:append(odds,[i])
);
evens;
odds;

D:makelist(list1[e],e,evens);
E:makelist(list1[j],j,odds);
set_D: setify(D);
set_E: setify(E);
set_DUE: union(set_D,set_E);
kk: cardinality(set_D);
ll: cardinality(set_E);
mm: cardinality(set_DUE);]]></text>
    </questionvariables>
