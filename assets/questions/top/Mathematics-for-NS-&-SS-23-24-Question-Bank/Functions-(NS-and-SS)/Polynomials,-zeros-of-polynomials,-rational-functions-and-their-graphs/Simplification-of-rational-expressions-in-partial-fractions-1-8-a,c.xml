    <questionvariables>
      <text>/*...........Question 2.......................................*/

/*Defining the question*/
const_1:1+rand(5);/*The first constant coefficient*/
const_2:1+rand(5);/*The second constant*/
const_3:1+rand(4);/*The third constant*/
const_4:1+rand(8);/*The fourth constant*/
zz1:rand_with_prohib(-7,7,[0]);/* numerator_1*/
zz2:rand_with_prohib(-7,7,[0]);/* numerator_2*/
zz3:rand_with_prohib(-7,7,[0]);/* numerator_2*/
part_frac_1a:zz1/x;/*The first Partial fraction*/
part_frac_2b:zz2/(const_1*x+const_2);/*The second Partial fraction*/
part_frac_3c:zz3/(x+const_3);/*The third Partial fraction*/
question_expression2: factor(part_frac_1a+part_frac_2b+part_frac_3c);

/*model answer question 2*/
ta1:part_frac_1a;
ta2:part_frac_2b;
ta3:part_frac_3c;
ta4:ta1+ta2+ta3;
ta1a: partfrac(question_expression2,x);

/*Worked solution codes for question 2 */
part_frac_Aa:A/x;
part_frac_Bb:B/(const_1*x+const_2);
part_frac_Cc:C/(x+const_3);
numerator_question_expression2:num(question_expression2);
expra:A*(const_1*x+const_2)*(x+const_3)+B*x*(x+const_3)+C*x*(const_1*x+const_2)=numerator_question_expression2;

/*Find A, B and C*/
expr1a:ev(expra,x=0);
expAa:expr1a/ev(((const_1*x+const_2)*(x+const_3)),x=0);
expr2b:ev(expra,x=-const_3);
expCc:expr2b/ev((x*(const_1*x+const_2)),x=-const_3);
coef_Bb:ev((-const_2/const_1),simp);
expr3bc:ev(expra,x=coef_Bb);
expBb:expr3bc/ev(x*(x+const_3),x=(-const_2/const_1));

expr3c: question_expression2=ta1+ta2+ta3;</text>
