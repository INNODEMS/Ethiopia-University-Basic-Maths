            \addlegendentry{$y = \sinh x$}
            
            % y = 1/2 e^{-x}
            \addplot [very thick, red] {0.5*exp(x)};
            \addlegendentry{$y = \frac{1}{2} e^{x}$}
            
            % y = 1/2 e^{x}
            \addplot [very thick, green] {-0.5*exp(-x)};
            \addlegendentry{$y =- \frac{1}{2} e^{-x}$}
        \end{axis}
