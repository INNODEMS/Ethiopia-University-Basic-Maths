    </stackversion>
    <questionvariables>
      <text><![CDATA[all_choices: [
	[ (p implies q) nounor (p implies not q), true, "(p implies q) or (p implies not(q))"],
	[ (p nounand q) implies (not r nounor (p implies q)), true, "(p and q) implies (not(r) or (p implies q))"],
	[ not p nounand not q, false, "not(p) and not(q)"],
	[ (not p nounand q) nounor q, false, "(not(p) and q) or q"],
	[ (p nounand q) implies (p nounor q), true, "(p and q) implies (p or q)"],
	[ (p implies q) nounand (q implies r) implies (p implies r), true, "(p implies q) and (q implies r) implies (p implies r)"],
	[ (not p nounand q) nounor p, false, "(not(p) and q) or p"],
	[ p nounor (q nounand r), false, "p or (q and r)"],
	[ (p nounor q) nounand (p nounor r), false, "(p or q) and (p or r)"]
];
choices: rand_selection(all_choices, 3);
choices: append(choices, [["None of the above", not (choices[1][2] or choices[2][2] or choices[3][2]), "None of the above"]]);
ta1: choices;]]></text>
