    <questionvariables>
      <text>/*Defining parabola equation*/
aa: rand_with_step(-5,5,1); /*value of y0*/
pp: rand_with_step(-4,4,1); /*value of pp*/
cc: rand_with_step(-5,5,1); /*value of x0*/
parabola: expand((x-aa)^2-4*pp*(y-cc))=0;

/*Coordinates of the focus*/
ta2:  aa; /*abscissa*/
ta3: cc+pp; /*ordinate*/
/*Directrix*/
ta4: y=cc-pp;

/*Worked solution*/
expr1: expand((x-aa)^2);
expr2: expand((x-aa)^2-4*pp*(y-cc))-expr1;
simp:false;
ta1: (x-aa)^2=4*pp*(y-cc);</text>
    </questionvariables>
