    <questionvariables>
      <text><![CDATA[simp:false;
pma:rand([-1,1]);
aa:ev(pma*(rand(6)+2),simp);
pmb:rand([-1,1]);
bb:ev(pmb*(rand(6)+2),simp);
sigb:if bb<0 then "-" else "+";
zz:aa+bb*i;
quad:if aa>0 then (if bb>0 then 1 else 4) else (if bb>0 then 2 else 3); 
primarg:ev(atan(abs(bb/aa)),simp);
arg:if quad = 1 then primarg elseif quad=2 then ev(%pi-primarg,simp) elseif quad=3 then ev(-(%pi-primarg),simp) else ev(-primarg,simp);
argdp:(ev(round(float(arg*100))/100,simp));
mod:ev(sqrt(aa^2+bb^2),simp);
/*worked solution variables*/
lba:if aa<0 then"(" else "";
rba:if aa<0 then ")" else "";
lbb:if bb<0 then "(" else "";
rbb:if bb<0 then ")" else "";
simp:true;
/*model answers*/
ta1: mod*(decimalplaces(cos(argdp),2) + i*decimalplaces(sin(argdp),2)); /*in 2dp*/
ta_1: mod*(cos(argdp) + i*sin(argdp)); 
ta2: mod*%e^(argdp*i);]]></text>
    </questionvariables>
