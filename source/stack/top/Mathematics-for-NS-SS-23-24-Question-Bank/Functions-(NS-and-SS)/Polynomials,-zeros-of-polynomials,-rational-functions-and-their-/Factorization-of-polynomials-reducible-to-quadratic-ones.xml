      <text>2023060500</text>
    </stackversion>
    <questionvariables>
      <text>/*Generating quadratic*/
c_11:rand([2,3,5]);
c_12:rand_with_prohib(-6,6,[0,c_11,2*c_11,3*c_11,-c_11,-2*c_11,-3*c_11]);
c_21:rand_with_prohib(2,5,[c_11,4]);
c_22:rand_with_prohib(-6,6,[0,c_21,2*c_21,3*c_21,-c_21,-2*c_21,-3*c_21]);
expr_fac:(c_11*x-c_12)*(c_21*x-c_22);
expr_exp:expand(expr_fac);
/*Hiding the quadratic by adding a^2b^4*/
xx:a^2*b^4;
expr:ev(expr_exp,x=xx);
/*Model answer*/
ta:factor(expr);

/*General Solution Variables*/
/*Finding coefficients - method 1*/
disp_coef_x2:coeff(expr_exp,x,2);
disp_coef_x1:coeff(expr_exp,x,1);
disp_coef_x0:coeff(expr_exp,x,0);

var_yy:-1*(c_11*c_22*xx);
var_zz:-1*(c_12*c_21*xx);
var_yz:var_zz+var_yy;</text>
    </questionvariables>
